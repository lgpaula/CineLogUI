<UserControl x:Class="CineLog.Views.CollectionView"
        xmlns="https://github.com/avaloniaui"
        xmlns:rs="using:RangeSlider.Avalonia.Controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <ScrollViewer x:Name="CollectionScrollViewer" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <StackPanel>
                        <Expander VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <Expander.Header>
                                        <TextBlock Text="Filter" FontSize="20"/>
                                </Expander.Header>
                                <Grid RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="150,*">
                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Rating</TextBlock>
                                        <rs:RangeSlider Grid.Row="0" Grid.Column="1" Minimum="0.0" Maximum="10.0" LowerSelectedValue="0.0" UpperSelectedValue="10.0" IsThumbOverlap="False"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Genre</TextBlock>
                                        <ScrollViewer Grid.Row="1" Grid.Column="1">
                                                <WrapPanel Orientation="Horizontal">
                                                        <CheckBox Content="Action"/>
                                                        <CheckBox Content="Adventure"/>
                                                        <CheckBox Content="Animation"/>
                                                        <CheckBox Content="Biography"/>
                                                        <CheckBox Content="Comedy"/>
                                                        <CheckBox Content="Crime"/>
                                                        <CheckBox Content="Documentary"/>
                                                        <CheckBox Content="Drama"/>
                                                        <CheckBox Content="Family"/>
                                                        <CheckBox Content="Fantasy"/>
                                                        <CheckBox Content="Film-Noir"/>
                                                        <CheckBox Content="History"/>
                                                        <CheckBox Content="Horror"/>
                                                        <CheckBox Content="Music"/>
                                                        <CheckBox Content="Musical"/>
                                                        <CheckBox Content="Mystery"/>
                                                        <CheckBox Content="Romance"/>
                                                        <CheckBox Content="Sci-Fi"/>
                                                        <CheckBox Content="Sport"/>
                                                        <CheckBox Content="Thriller"/>
                                                        <CheckBox Content="War"/>
                                                        <CheckBox Content="Western"/>
                                                </WrapPanel>
                                        </ScrollViewer>

                                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Year release</TextBlock>
                                        <rs:RangeSlider Grid.Row="2" Grid.Column="1" Minimum="1874" Maximum="2025" LowerSelectedValue="1874" UpperSelectedValue="2025" IsThumbOverlap="False"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">Company</TextBlock>
                                        <ScrollViewer Grid.Row="3" Grid.Column="1">
                                                <WrapPanel Orientation="Horizontal">
                                                        <CheckBox Content="Disney"/>
                                                        <CheckBox Content="Pixar"/>
                                                        <CheckBox Content="DreamWorks"/>
                                                        <CheckBox Content="Warner Bros."/>
                                                        <CheckBox Content="Universal"/>
                                                        <CheckBox Content="Paramount"/>
                                                        <CheckBox Content="Sony"/>
                                                        <CheckBox Content="20th Century Fox"/>
                                                        <CheckBox Content="Lionsgate"/>
                                                        <CheckBox Content="MGM"/>
                                                        <CheckBox Content="Miramax"/>
                                                        <CheckBox Content="New Line Cinema"/>
                                                        <CheckBox Content="Orion Pictures"/>
                                                        <CheckBox Content="TriStar Pictures"/>
                                                        <CheckBox Content="United Artists"/>
                                                        <CheckBox Content="Columbia Pictures"/>
                                                        <CheckBox Content="Touchstone Pictures"/>
                                                        <CheckBox Content="Focus Features"/>
                                                        <CheckBox Content="Studio Ghibli"/>
                                                        <CheckBox Content="A24"/>
                                                </WrapPanel>
                                        </ScrollViewer>

                                        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">Type</TextBlock>
                                        <WrapPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                                                <CheckBox Content="Movie"/>
                                                <CheckBox Content="Series"/>
                                        </WrapPanel>
                                        <Button Grid.Row="5" Grid.Column="0" Content="Apply" HorizontalAlignment="Left" Margin="0,10,10,0"/>
                                </Grid>

                        </Expander>
                        
                        <WrapPanel Name="CollectionWrapPanel" Orientation="Horizontal"/>
                </StackPanel>
        </ScrollViewer>
</UserControl>