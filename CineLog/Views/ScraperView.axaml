<UserControl x:Class="CineLog.Views.ScraperView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Styles>
		<Style Selector="TextBox.CustomTextBox:focus /template/ Border#PART_BorderElement">
			<Setter Property="Background" Value="White"/>
		</Style>
		<Style Selector="TextBox.CustomTextBox:focus">
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="CaretBrush" Value="Black"/>
		</Style>
	</UserControl.Styles>

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <StackPanel Spacing="10">
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="Genre" Foreground="White" FontSize="20"/>
                </Expander.Header>
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <WrapPanel x:Name="GenrePanel">
                        <CheckBox Content="Action" Foreground="White" Margin="5"/>
                        <CheckBox Content="Adventure" Foreground="White" Margin="5"/>
                        <CheckBox Content="Animation" Foreground="White" Margin="5"/>
                        <CheckBox Content="Biography" Foreground="White" Margin="5"/>
                        <CheckBox Content="Comedy" Foreground="White" Margin="5"/>
                        <CheckBox Content="Crime" Foreground="White" Margin="5"/>
                        <CheckBox Content="Documentary" Foreground="White" Margin="5"/>
                        <CheckBox Content="Drama" Foreground="White" Margin="5"/>
                        <CheckBox Content="Family" Foreground="White" Margin="5"/>
                        <CheckBox Content="Fantasy" Foreground="White" Margin="5"/>
                        <CheckBox Content="Film-Noir" Foreground="White" Margin="5"/>
                        <CheckBox Content="Game-Show" Foreground="White" Margin="5"/>
                        <CheckBox Content="History" Foreground="White" Margin="5"/>
                        <CheckBox Content="Horror" Foreground="White" Margin="5"/>
                        <CheckBox Content="Music" Foreground="White" Margin="5"/>
                        <CheckBox Content="Musical" Foreground="White" Margin="5"/>
                        <CheckBox Content="Mystery" Foreground="White" Margin="5"/>
                        <CheckBox Content="News" Foreground="White" Margin="5"/>
                        <CheckBox Content="Reality-TV" Foreground="White" Margin="5"/>
                        <CheckBox Content="Romance" Foreground="White" Margin="5"/>
                        <CheckBox Content="Sci-Fi" Foreground="White" Margin="5"/>
                        <CheckBox Content="Short" Foreground="White" Margin="5"/>
                        <CheckBox Content="Sport" Foreground="White" Margin="5"/>
                        <CheckBox Content="Talk-Show" Foreground="White" Margin="5"/>
                        <CheckBox Content="Thriller" Foreground="White" Margin="5"/>
                        <CheckBox Content="War" Foreground="White" Margin="5"/>
                        <CheckBox Content="Western" Foreground="White" Margin="5"/>
                    </WrapPanel>
                </ScrollViewer>
            </Expander>

            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="Release Year" Foreground="White" FontSize="20"/>
                </Expander.Header>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="From" Foreground="White"/>
                    <TextBox Classes="CustomTextBox" x:Name="yearFrom" Width="50" Watermark="1874" Foreground="Black" Background="White"/>
                    <TextBlock Text="To" Foreground="White"/>
                    <TextBox Classes="CustomTextBox" x:Name="yearTo" Width="50" Watermark="2026" Foreground="Black" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="Rating" Foreground="White" FontSize="20"/>
                </Expander.Header>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="From" Foreground="White"/>
                    <TextBox Classes="CustomTextBox" x:Name="ratingFrom" Width="50" Watermark="0.0" Foreground="Black" Background="White"/>
                    <TextBlock Text="To" Foreground="White"/>
                    <TextBox Classes="CustomTextBox" x:Name="ratingTo" Width="50" Watermark="10.0" Foreground="Black" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="Company" Foreground="White" FontSize="20"/>
                </Expander.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <WrapPanel x:Name="CompanyPanel" />
                </ScrollViewer> 
            </Expander>

            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="Type" Foreground="White" FontSize="20"/>
                </Expander.Header>
                    <WrapPanel x:Name="TypePanel">
                        <CheckBox Content="Movie" Foreground="White" Margin="5"/>
                        <CheckBox Content="Series" Foreground="White" Margin="5"/>
                        <CheckBox Content="Short" Foreground="White" Margin="5"/>
                        <CheckBox Content="TV Movie" Foreground="White" Margin="5"/>
                        <CheckBox Content="TV Special" Foreground="White" Margin="5"/>
                        <CheckBox Content="TV Mini-Series" Foreground="White" Margin="5"/>
                    </WrapPanel>
            </Expander>

            <!-- Scrape Button -->
            <Button x:Name="scrapeButton" Content="scrape" Width="100" Height="40" Foreground="Black" Background="White"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
