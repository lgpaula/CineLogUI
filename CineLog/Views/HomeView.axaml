<UserControl x:Class="CineLog.Views.HomeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Top Bar -->
        <Grid RowDefinitions="Auto,*" Background="Black">

            <StackPanel Orientation="Vertical" Margin="10" Spacing="10">
                <!-- Scrape Section -->
                <TextBlock Text="Scrape" Foreground="White" FontSize="16"/>
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="10" Height="150" Width="100" HorizontalAlignment="Left" Name="ScrapeButtonBorder">
                    <Button Click="ClickHandler" Tag="Settings" Foreground="White" Background="Transparent" BorderBrush="White"/>
                </Border>
                
                <!-- My List #1 -->
                <DockPanel>
                    <TextBlock Text="My list #1" Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                    <Button Content="- hide" DockPanel.Dock="Right" Name="HideMyListButton" Foreground="White" Background="Transparent" BorderBrush="White"/>
                </DockPanel>
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="10" Name="MyListContainer">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Horizontal">
                            <Button Width="60" Height="80" Content="O" Foreground="White" Background="Transparent" BorderBrush="White"/>
                            <Button Width="60" Height="80" Content="O" Foreground="White" Background="Transparent" BorderBrush="White"/>
                            <Button Width="60" Height="80" Content="O" Foreground="White" Background="Transparent" BorderBrush="White"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Entire Collection -->
                <DockPanel>
                    <TextBlock Text="Entire Collection" Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                    <Button Content="- hide" DockPanel.Dock="Right" Name="HideCollectionButton" Foreground="White" Background="Transparent" BorderBrush="White"/>
                </DockPanel>
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="10" Name="CollectionContainer">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal" Name="MoviesContainer"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
