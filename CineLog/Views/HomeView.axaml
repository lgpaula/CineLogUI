<UserControl x:Class="CineLog.Views.HomeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Top Bar -->
        <Grid RowDefinitions="Auto,Auto,Auto" Background="Black">
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="10" Height="150" Width="100" HorizontalAlignment="Left" Name="ScrapeButtonBorder">
                    <Button Click="ViewChanger" Tag="Scraper" CornerRadius="10" Height="150" Width="100"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="10" Height="30" Width="80" HorizontalAlignment="Left">
                    <Button Click="AddListToTable" Content="Add List" Background="Transparent" />
                </Border>
            </StackPanel>
                
            <StackPanel Grid.Row="2" Name="ListsContainer" Orientation="Vertical" Margin="10" Spacing="10">
                <DockPanel>
                    <TextBlock Text="Entire Collection" Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                    <Button Click="ViewChanger" Content="See all" DockPanel.Dock="Right" FontSize="16" Tag="Collection" Foreground="White" Background="Transparent" BorderBrush="White"/>
                </DockPanel>
                    <StackPanel Orientation="Horizontal" Name="CollectionContainer"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
