<UserControl x:Class="CineLog.Views.HomeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Top Bar -->
        <Grid RowDefinitions="Auto,*" Background="Black">

            <StackPanel Orientation="Vertical" Margin="10" Spacing="10">
                <!-- Scrape Section -->
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="10" Height="150" Width="100" HorizontalAlignment="Left" Name="ScrapeButtonBorder">
                    <Button Click="ViewChanger" Tag="Settings" Foreground="White" Background="Transparent" BorderBrush="White"/>
                </Border>
                
                <!-- My List #1 -->
                <DockPanel>
                    <TextBlock Text="My list #1" Foreground="White" FontSize="16"/>
                    <Button Content="See all" DockPanel.Dock="Right" FontSize="16" Tag="ExpandListButton" Foreground="White" Background="Transparent" BorderBrush="White"/>
                </DockPanel>
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="10" Name="MyListContainer">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Horizontal" Name="CustomList"/>
                    </ScrollViewer>
                </Border>

                <!-- Entire Collection -->
                <DockPanel>
                    <TextBlock Text="Entire Collection" Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                    <Button Click="ClickExpander" Content="See all" DockPanel.Dock="Right" FontSize="16" Tag="ExpandCollectionButton" Foreground="White" Background="Transparent" BorderBrush="White"/>
                </DockPanel>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Horizontal" Name="MoviesContainer"/>
                    </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
