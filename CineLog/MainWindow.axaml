<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CineLog.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CineLog.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="CineLog"
        Width="1200"
        Height="700"
        MinWidth="800"
        MinHeight="500"
        Background="DarkSlateGray">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Fixed Header -->
        <Border DockPanel.Dock="Top" Background="DarkGray" Height="60">
            <Grid ColumnDefinitions="1*, 3*, 1*" VerticalAlignment="Center">
                
                <!-- Logo -->
                <TextBlock Text="MyApp" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"
                        Margin="10" Grid.Column="0"/>

                <!-- Search Box (Centered) -->
                <TextBox Grid.Column="1" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Width="300" Watermark="Search..."/>

                <!-- Account Button (Right) -->
                <Button Content="Account" Width="100" Height="30" VerticalAlignment="Center"
                        HorizontalAlignment="Right" Margin="10" Grid.Column="2"/>
            </Grid>
        </Border>

        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="Gray">
            <Button Content="Home" Click="ClickHandler" Tag="Home" Margin="20"/>
            <Button Content="Settings" Click="ClickHandler" Tag="Settings" Margin="20"/>
            <Button Content="Profile" Click="ClickHandler" Tag="Profile" Margin="20"/>
        </StackPanel>

        <!-- Scrollable Content -->
        <ScrollViewer DockPanel.Dock="Right">
            <ContentControl Content="{Binding CurrentView}" />
        </ScrollViewer>
    </DockPanel>


</Window>
